<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginBottom="24dp"
    android:foreground="@drawable/selector_style"
    android:orientation="horizontal"
    tools:ignore="MissingConstraints"
    tools:showIn="@layout/activity_main"
    app:cardCornerRadius="25dp"
    app:cardBackgroundColor="#7eb9f2"
    android:layout_margin="10dp"
    android:id="@+id/cardView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/txtUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="10sp"
            android:layout_toStartOf="@id/txtDate"
            tools:text="Facebook"
            android:textAlignment="center"
            style="@style/title">
        </TextView>

        <TextView
            android:id="@+id/txtDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_below="@id/txtUser"
            android:layout_alignStart="@id/txtUser"
            android:layout_marginEnd="24dp"
            android:maxLines="3"
            tools:text="bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla "
            style="@style/description">
        </TextView>
        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            tools:text="20 mai"
            style="@style/data">
        </TextView>
        <ImageView
            android:id="@+id/ivPin"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/baseline_push_pin_24"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            style="@style/pinned">
        </ImageView>

    </RelativeLayout>

</androidx.cardview.widget.CardView>