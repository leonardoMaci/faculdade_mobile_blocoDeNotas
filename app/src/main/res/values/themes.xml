<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Aplicativo2" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your light theme here. -->
    </style>

    <style name="Theme.Aplicativo2" parent="Base.Theme.Aplicativo2" />
    <style name="layoutMain" parent="Base.Theme.Aplicativo2">
        <item name="android:background">@color/blueMid</item>
    </style>
    <style name="recyclerviewCards" parent="Base.Theme.Aplicativo2">
        <item name="android:background">@color/blueMid</item>
    </style>
    <style name="title" parent="Base.Theme.Aplicativo2">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="description" parent="Base.Theme.Aplicativo2">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="data"  parent="Base.Theme.Aplicativo2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="pinned" parent="Base.Theme.Aplicativo2">
        <item name="backgroundTint">#FFEB3B</item>
    </style>
    <style name="floatActionButtonAdd">
        <item name="android:backgroundTint">@color/white</item>
        <item name="tint">@color/blueDark</item>
        <item name="rippleColor">@android:color/darker_gray</item>
    </style>
    <style name="cadastro" parent="Base.Theme.Aplicativo2">
        <item name="android:background">@color/blueMid</item>
    </style>
    <style name="cadastroCard" parent="Base.Theme.Aplicativo2">
        <item name="android:backgroundTint">#7eb9f2</item>
    </style>
    <style name="cadastroTvLabels" parent="Base.Theme.Aplicativo2">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="edDescriptionLight" parent="Base.Theme.Aplicativo2">
        <item name="editTextStyle">@drawable/et_description_light</item>
    </style>
    <style name="cadastroTitleED" parent="Base.Theme.Aplicativo2">
        <item name="android:hint">@string/et_title</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:inputType">textCapWords</item>
        <item name="backgroundTint">@color/black</item>
    </style>
    <style name="cadastroDescriptionED" parent="Base.Theme.Aplicativo2">
        <item name="android:hint">@string/et_description</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:inputType">textCapWords|textMultiLine</item>
        <item name="android:background">@drawable/et_description_light</item>
    </style>
    <style name="cadastroCheckBox" parent="Base.Theme.Aplicativo2">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="buttonTint">@color/black</item>
    </style>
    <style name="cadsatroButtonPositive" parent="Base.Theme.Aplicativo2">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/blueDark</item>
    </style>
    <style name="cadsatroButtonNegative" parent="Base.Theme.Aplicativo2">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/blueDark</item>
    </style>
    <style name="listItem" parent="Base.Theme.Aplicativo2">
        <item name="android:backgroundTint">#7eb9f2</item>
    </style>
</resources>